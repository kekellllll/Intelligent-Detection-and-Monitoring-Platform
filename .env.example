# Environment Configuration
APP_NAME=Intelligent Detection and Monitoring Platform
DEBUG=false
ALLOWED_HOSTS=["*"]

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/monitoring_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SENSOR_TOPIC=sensor-data
KAFKA_ANOMALY_TOPIC=anomaly-alerts

# ML Model
MODEL_PATH=models/anomaly_detector.h5
MODEL_ACCURACY_THRESHOLD=0.95

# Monitoring
PROMETHEUS_PORT=8001
LOG_LEVEL=INFO

# Kubernetes
NAMESPACE=monitoring-platform